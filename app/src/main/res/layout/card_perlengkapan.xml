<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:src="@drawable/skylights_montreal_repairs"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/namaPerkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/thumbnail"/>
        <TextView
            android:id="@+id/hargaPerkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/namaPerkap"/>
        <TextView
            android:id="@+id/kontakPerkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/hargaPerkap"/>
        <TextView
            android:id="@+id/jenisPerkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/kontakPerkap"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jenisPerkap"
            android:text="All your event needs iseoo.id"
            android:textAlignment="center"
            android:id="@+id/iseoo"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/iseoo"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>